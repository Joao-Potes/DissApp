<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
        <link rel="stylesheet" href="/public/css/background.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Feedback</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
      <div class="container-fluid">
        <!-- Links -->
        <%- include('navbar.ejs') %>
      </div>
    </nav>
    <div class="container-fluid" style="margin-top: 80px">
    <h1><%= i18n.__("valueFeedback") %></h1>
    <p>
      <%= i18n.__("valueFeedbackDescription") %>
    </p>

    <h2><%= i18n.__("shareFeedback") %></h2>
    <p>
      <%= i18n.__("shareFeedbackDescription") %>
    </p>
    <p>
      <%= i18n.__("surveyDescription") %>
    </p>
    <p><a href=https://app.onlinesurveys.jisc.ac.uk/s/solent/user-feedback> <%= i18n.__("surveyLinkText") %></a></p>
    <p>
      <%= i18n.__("surveyAspects") %>
    </p>
    <ul>
      <% i18n.__("surveyAspectsList").forEach(function(item) { %>
        <li><%= item %></li>
      <% }); %>
    </ul>

    <h2><%= i18n.__("whyFeedback") %></h2>
    <p>
      <%= i18n.__("whyFeedbackDescription") %>
    </p>
    <ul>
      <% i18n.__("whyFeedbackList").forEach(function(item) { %>
        <li><%= item %></li>
      <% }); %>
    </ul>

    <h2><%= i18n.__("thankYou") %></h2>
    <p>
      <%= i18n.__("thankYouDescription") %>
    </p>
    </div>
  </body>
</html>