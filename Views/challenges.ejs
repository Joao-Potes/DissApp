<!DOCTYPE html>
<html>
  <head>
    <title>Challenges</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/css/challengesStyle.css" />
    <link rel="stylesheet" href="/public/css/background.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/js/challenges.js" defer></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
      <div class="container-fluid">
        <!-- Links -->
        <%- include('navbar.ejs') %>
      </div>
    </nav>
    <div class="container-fluid" style="margin-top: 80px">
      <h1><%= i18n.__("challenge1") %>:</h1>
      <h2><%= i18n.__("helloWorld") %></h2>
      <p><%= i18n.__("helloWorldDescription") %></p>
      <p><%= i18n.__("clickReveal") %></p>
      <button id="reveal-button-1"><%= i18n.__("reveal") %></button>
      <div class="code-box" id="code-box-1" style="display: none">
        <pre><code>
print("Hello, World!")
        </code></pre>
      </div>

      <h1><%= i18n.__("challenge2") %>:</h1>
      <h2><%= i18n.__("simpleCalculator") %></h2>
      <p><%= i18n.__("simpleCalculatorDescription") %></p>
      <button id="reveal-button-2"><%= i18n.__("reveal") %></button>
      <div class="code-box" id="code-box-2" style="display: none">
        <pre><code>
num1 = "Enter first number"
num2 = "Enter second number"
print("Sum:", num1 + num2)
print("Difference:", num1 - num2)
print("Product:", num1 * num2)
print("Quotient:", num1 / num2)
  </code></pre>
      </div>

      <h1><%= i18n.__("challenge3") %>:</h1>
      <h2><%= i18n.__("fizzBuzz") %></h2>
      <p><%= i18n.__("fizzBuzzDescription") %></p>
      <button id="reveal-button-3"><%= i18n.__("reveal") %></button>
      <div class="code-box" id="code-box-3" style="display: none">
        <pre><code>
for i in range(1, 101):
    if i % 3 == 0 and i % 5 == 0:
        print("FizzBuzz")
    elif i % 3 == 0:
        print("Fizz")
    elif i % 5 == 0:
        print("Buzz")
    else:
        print(i)
  </code></pre>
      </div>
    </div>
  </body>
</html>
